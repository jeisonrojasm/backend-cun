datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Curso {
  id          Int       @id @default(autoincrement())
  nombre      String    @db.VarChar(100)
  descripcion String?
  lecciones   Leccion[]
}

model Leccion {
  id       Int        @id @default(autoincrement())
  nombre   String     @db.VarChar(100)
  cursoId  Int
  curso    Curso      @relation(fields: [cursoId], references: [id])
  preguntas Pregunta[]
}

model Pregunta {
  id                Int      @id @default(autoincrement())
  enunciado         String
  opciones          String[]
  respuestaCorrecta String   @db.VarChar(100)
  leccionId         Int
  leccion           Leccion  @relation(fields: [leccionId], references: [id])
}
